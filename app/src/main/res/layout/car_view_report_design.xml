<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">
    <LinearLayout
        android:id="@+id/report_post_redirect"
        android:layout_width="250dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_report"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/textView_report"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="15dp"
            android:text="Item"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/accept_report"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:background="@drawable/button"
            android:backgroundTint="#247543"
            android:textSize="12sp"
            android:src="@drawable/ic_done"
            android:textColor="#247543" />
        <ImageView
            android:id="@+id/reject_report"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:background="@drawable/button"
            android:backgroundTint="#bd3333"
            android:textSize="12sp"
            android:src="@drawable/ic_reject"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.cardview.widget.CardView>