<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.NewPostFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/icicle"
        android:orientation="vertical">

        <EditText
            android:id="@+id/post_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="top|start"
            android:hint="Type something about your experience..."
            android:inputType="textMultiLine"
            android:minLines="1"
            android:scrollbars="vertical"
            android:autofillHints="" />


        <EditText
            android:id="@+id/post_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="top|start"
            android:hint="Location"
            android:inputType="textMultiLine"
            android:minLines="1"
            android:scrollbars="vertical" />

        <ImageView
            android:id="@+id/post_photo"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:backgroundTint="@color/dark_grey"
            android:background="@color/grey"
            android:src="@drawable/ic_add" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/post_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/button"
            android:backgroundTint="@color/cerulean"
            android:padding="10dp"
            android:text="Add new post"
            android:textColor="@color/icicle" />
    </LinearLayout>
</ScrollView>